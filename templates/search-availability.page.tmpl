{{template "base" .}}
{{define "content"}}
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1 class="mt-5">Search for availability</h1>
      <form action="" class="needs-validation" method="get" novalidate>
        <div class="row">
          <div class="col">
            <div class="row" id="reservation_dates">
              <div class="col">
                <input
                  id="start_date"
                  name="end_date"
                  type="text"
                  class="form-control"
                  autocomplete="false"
                  placeholder="Arrival Date"
                  required
                  name="start"
                />
              </div>
              <div class="col">
                <input
                  id="end_date"
                  name="end_date"
                  type="text"
                  class="form-control"
                  autocomplete="false"
                  placeholder="Departure"
                  required
                  name="end"
                />
              </div>
            </div>
          </div>
        </div>
        <hr />
        <button type="submit" class="btn btn-primary">
          Search Availability
        </button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <p id="my_paragraph">This is some text</p>
      <p>
        <button class="btn btn-outline btn-secondary" id="color-button">
          Click Name
        </button>
      </p>
    </div>
  </div>
</div>
{{ end }}

{{ define "js"}}
<script>
  const elem = document.getElementById("reservation_dates");
  const rangePicker = new DateRangePicker(elem, {
    format: "dd-M-yyyy",
  });
</script>
{{ end }}
